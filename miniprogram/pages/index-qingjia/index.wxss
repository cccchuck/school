/* miniprogram/pages/index-qingjia/index.wxss */
swiper {
  height: calc(100vh - 52px);
}

.swiper-content {
  background-color: #f4f4f4;
  padding: 0;
  width: 100vw;
  height: calc(100vh - 52px);
  box-sizing: border-box;
}

.submit-content {
  padding: 10px 0;
  height: calc(100vh - 72px);
  overflow: scroll;
}

.submit-content > view {
  margin: 0 10px;
  padding: 10px 20px;
  background-color: #fff;
}

.submit-content > view + view {
  margin-top: 1em;
}

.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-item .label {
  color: var(--black-color-100);
  font-weight: 500;
}

.form-item .value {
  color: var(--black-color-80);
  flex: 1;
  text-align: right;
}

.form-reason .form-item {
  display: block;
}

.form-reason .form-item .value {
  margin-top: 1em;
  text-align: left;
}

.form-reason .form-item .value textarea {
  width: 100%;
  height: 70px;
}

.form-document .form-item {
  display: block;
}

.form-document .form-item .value {
  margin-top: 1em;
  text-align: left;
}

.submit-content button {
  margin: 20px 10px;
  font-size: 1em;
  color: #fff;
  background-image: linear-gradient(90deg, #84fab0 0%, #8fd3f4 100%);
  padding: 0.4em 0.3em;
}

.submit-content button::after {
  border: none;
}

/* 请假记录页面样式 */
.record-wrapper {
  height: 100%;
  overflow: scroll;
}

.record-wrapper .record-content {
  padding: 0.5em 1em;
  padding-top: 0;
}